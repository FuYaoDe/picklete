            li
              a(href='shop') 工藝職人
            li
              a(href='shop') 特別企劃
            li
              a.btn.btn-default(href='brands-list-shop') 品牌列表
        li
          a(href='login')
            span.glyphicon.glyphicon-user.m-right-1
            | LOGIN
        li
          a(href='cart')
            span.glyphicon.glyphicon-shopping-cart.m-right-1
            span.text-green 5
        li
          .input-group.m-bottom-2.m-top-2
            input.form-control(type='text', placeholder='Search for...')
            span.input-group-btn
              a.btn.btn-default.p-left-2.p-right-2(href='search-result')
                span.glyphicon.glyphicon-search
          // /input-group
    // /navmenu-fixed-right
    //
      modal-login
      ==================================================
    #modal-login.modal.fade
      .modal-dialog.modal-sm(role='document')
        .modal-content
          .modal-header.p-30
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h1.modal-title.text-center 登入
          // /modal-header
          .modal-body.text-center.p-30
            form.m-bottom-4
              .form-group
                input.form-control(type='email', placeholder='Email')
              // /form-group
              .form-group
                input.form-control(type='password', placeholder='Password')
              // /form-group
              button.btn.btn-black.border-radius-circle.btn-block.m-bottom-2(type='button', data-toggle='modal', data-target='#modal-login-feedback', data-dismiss='modal') 登入會員
              button.btn.btn-fb.border-radius-circle.btn-block(type='button', data-dismiss='modal') FACEBOOK 登入
            a(href='#', data-toggle='modal', data-target='#modal-password', data-dismiss='modal') 忘記密碼
            hr.m-top-4.m-bottom-4
            h5.m-bottom-4 還沒有帳號？
            a.btn.btn-line.border-radius-circle.btn-block(href='signup') 申請會員
          // /modal-body
        // /modal-content
      // /modal-dialog
    // /modal
    //
      modal-login-feedback
      ==================================================
    #modal-login-feedback.modal.fade
      .modal-dialog.modal-sm(role='document')
        .modal-content
          .modal-header.p-30
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h1.modal-title.text-center 登入
          // /modal-header
          .modal-body.text-center.p-30
            form.m-bottom-4
              .form-group.has-success.has-feedback
                input.form-control(type='email', placeholder='Email')
                span.glyphicon.glyphicon-ok.form-control-feedback(aria-hidden='true')
              // /form-group
              .form-group.has-error.has-feedback
                input#exampleInputPassword1.form-control(type='password', placeholder='Password')
                span.glyphicon.glyphicon-remove.form-control-feedback(aria-hidden='true')
              // /form-group
              button.btn.btn-black.border-radius-circle.btn-block.m-bottom-2(type='submit', data-dismiss='modal') 登入會員
              button.btn.btn-fb.border-radius-circle.btn-block(type='submit', data-dismiss='modal') FACEBOOK 登入
            a(href='#', data-toggle='modal', data-target='#modal-password', data-dismiss='modal') 忘記密碼
            hr.m-top-4.m-bottom-4
            h5.m-bottom-4 還沒有帳號？
            a.btn.btn-line.border-radius-circle.btn-block(href='signup') 申請會員
          // /modal-body
        // /modal-content
      // /modal-dialog
    // /modal
    //
      modal-password
      ==================================================
    #modal-password.modal.fade
      .modal-dialog.modal-sm(role='document')
        .modal-content
          .modal-header.p-30
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h1.modal-title.text-center 忘記密碼
          // /modal-header
          .modal-body.text-center.p-30
            form.m-bottom-4
              .form-group
                input.form-control(type='email', placeholder='Email')
              // /form-group
              button.btn.btn-black.border-radius-circle.btn-block.m-bottom-2(type='button', data-dismiss='modal') 發送信箱
            a(href='#', data-toggle='modal', data-target='#modal-login', data-dismiss='modal') 取消
            hr.m-top-4.m-bottom-4
            h5.m-bottom-4 還沒有帳號？
            a.btn.btn-line.border-radius-circle.btn-block(href='signup') 申請會員
          // /modal-body
        // /modal-content
      // /modal-dialog
    // /modal
