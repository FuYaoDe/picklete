extends ./../layout

block body
  h1 user-list
  div(data-role='fieldcontain')
    a#addUserButton.ui-btn.ui-corner-all(href='/user/create')新增
    select(id='roles' name='roles')
        each role in roles
          option(value="role.id")= role.name
  table.table
    thead
      tr
        th [#]
        th [username]
        th [email]
        th [mobile]
        th [address]
        th [RoleId]
        th [comment]
    tbody
      each user in users
        tr
          th(scope='row')
            a(href="/user/show/#{user.id}")= user.id
          td= user.username
          td= user.email
          td= user.mobile
          td= user.address
          td= user.RoleId
          td= user.comment
  table.table
    thead
      tr
        th [#]
        th [name]
        th [comment]
    tbody
      each role in roles
        tr
          th(scope='row')
            a(href="/user/show/#{role.id}")= role.id
          td= role.name
          td= role.comment
