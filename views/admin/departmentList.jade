extends ../_layout_auth
block body
  h2.m-bottom-6 館別管理
  .row
    #dpt-big.col-md-3.border-right-1.m-bottom-6
      h4.m-bottom-4.text-gray 大館別
      .list-group.list-group-edit.list-group-lg
        each dpt, index in dpts
          .list-group-item.edit-link
            span.glyphicon.glyphicon-menu.m-right-2(data-id='#{dpt.id}')
            a(href='#', data-toggle='modal', class='dpt name',data-id='#{dpt.id}',data-name='#{dpt.name}')
              | #{dpt.name}
              span.glyphicon.glyphicon-pencil2.m-left-1(data-id='#{dpt.id}',data-name='#{dpt.name}')
          // /list-group-item
        .list-group-item.edit-link
          span.glyphicon.glyphicon-menu.m-right-2
          a.special.project(href='#')
            | 特別企劃
        // /list-group-item
      // /list-group-edit
    // /col-md-3
    #small-dpt.col-md-3.border-right-1.m-bottom-6
      h4.m-bottom-4.text-gray
        | 小館別
        a.btn.btn-sm-circle.btn-green.m-left-1(id="plus" style="display:none" href='#', data-toggle='modal', data-target='#modal-control-shop-type-sm')
          span.glyphicon.glyphicon-plus
      .list-group.list-group-edit()
        .special(id="special" style="display:none") 
          .list-group-item.edit-link
            | 閃購專區
            span.glyphicon.glyphicon-locked
          // /list-group-item
          .list-group-item.edit-link
            | 優惠商品
            span.glyphicon.glyphicon-locked
          // /list-group-item
          .list-group-item.edit-link
            | 本月主題
            span.glyphicon.glyphicon-locked
        DptSubs
        each dpt, val in dpts
          .dpt(id="subDpt"+val style="display:none")
            - if (dpt.DptSubs.length)
              each subDpt, index in dpt.DptSubs
                // /list-group-item
                .list-group-item.edit-link
                  a(href='#', data-toggle='modal', class='subDpt name', data-id="#{subDpt.id}",data-name='#{subDpt.name}')
                    | #{subDpt.name}
                    span.glyphicon.glyphicon-pencil2.m-left-1
                  a.delete.subDpt(href='#', data-toggle='modal')
                    span.glyphicon.glyphicon-remove(data-id="#{subDpt.id}")

