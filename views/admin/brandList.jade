extends ../_layout_auth

block body
  .col-sm-9.col-md-10
    h2.m-bottom-6 品牌管理
    a.btn.btn-danger.btn-lg.m-bottom-6(href='/admin/brands/create') 建立品牌
    .clearfix.m-bottom-2.text-left
      h4.text-gray-darker.m-bottom-4 代理品牌
      ul.list-inline.list-brand
        each agent, index in agents
          li
            a(href='/admin/brands/update?id=#{agent.id}')
              img.border-block-1.img-full(src='/images/demo/brands-logo-2.jpg', title='#{agent.name}')
    // /clearfix
    .clearfix.m-bottom-2
      h4.text-gray-darker.m-bottom-4 精選品牌
      ul.list-inline.list-brand
        each brand, index in brands
          li
            a(href='/admin/brands/update?id=#{brand.id}')
              img.border-block-1.img-full(src='/images/demo/brands-logo-1.jpg', title='#{brand.name}')
    // /clearfix
